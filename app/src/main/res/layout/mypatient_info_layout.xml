<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/actualpat_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/update_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Sis_press"
            android:layout_width="115dp"
            android:layout_height="20dp"
            android:textColor="#000000"
            android:layout_below="@+id/date"
            android:text="Systolic Pressure:"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/sis_press"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_below="@+id/date"
            android:textColor="#000000"
            android:inputType="number"
            android:layout_toRightOf="@+id/Sis_press"
            android:text="" />

        <TextView
            android:id="@+id/Dis_press"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_below="@+id/Sis_press"
            android:textColor="#000000"
            android:layout_marginTop="30dp"
            android:text="Diastolic Pressure:"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/dis_press"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_below="@+id/sis_press"
            android:inputType="number"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/Dis_press"
            android:text="" />

        <TextView
            android:id="@+id/EBL"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_below="@+id/hour"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/ebl"
            android:text="Blood Loss:"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ebl"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_below="@+id/hour"
            android:inputType="number"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:text="" />


        <TextView
            android:id="@+id/Perfusion"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_below="@+id/EBL"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/perfusion"
            android:text="Perfusion:"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/perfusion"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_below="@+id/ebl"
            android:inputType="text"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:text="" />

        <TextView
            android:id="@+id/HR"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_below="@+id/Perfusion"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/hr"
            android:text="Heart Rate:"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/hr"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:layout_below="@+id/perfusion"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:text="" />

        <TextView
            android:id="@+id/Mental"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_below="@+id/Dis_press"
            android:layout_marginTop="30dp"
            android:textColor="#000000"
            android:text="Mental:"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/mental"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_below="@+id/dis_press"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/Mental"
            android:textColor="#000000"
            android:text="" />

        <androidx.cardview.widget.CardView
            android:id="@+id/update_infoCV"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_gravity="center|center_horizontal"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:stateListAnimator="@drawable/lift_on_touch"
            app:cardBackgroundColor="#a54195"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_below="@+id/HR"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center|center_horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/update_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update Info"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_patientinfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/update_infoCV"
            android:background="#E9E9E9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>